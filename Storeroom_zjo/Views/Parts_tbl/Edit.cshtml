@model Storeroom_zjo.Models.Parts_tbl

@{
    ViewBag.Title = "Edycja";
}

<h2>Edycja części</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Część</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdPart)

        <div class="form-group">
            <div class = "control-label col-md-2"><strong>Producent</strong></div>
            <div class="col-md-10">
                @Html.DropDownList("IdManufacturer", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdManufacturer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><strong>Nazwa części</strong></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PartName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PartName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><strong>Kod części</strong></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ManufacturerCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ManufacturerCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><strong>Część oryginalna</strong></div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Orginal)
                    @Html.ValidationMessageFor(model => model.Orginal, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><strong>Zamiennik</strong></div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Artificial)
                    @Html.ValidationMessageFor(model => model.Artificial, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><strong>Ilość na magazynie</strong></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><strong>Minimalna ilość</strong></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MinimalStock, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MinimalStock, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"><strong>Autozamówienie</strong></div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.AutomaticOrder)
                    @Html.ValidationMessageFor(model => model.AutomaticOrder, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do listy części", "Index", null, new { @class = "btn btn-primary" })
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
